<% if edit %>
  <% title = "Edit a damn Cat!" %>
  <% action = cat_url(@cat) %>
  <% button_text = "Update Cat" %>
<% else %>
  <% title = "Create a damn Cat!" %>
  <% action = cats_url %>
  <% button_text = "Create Cat" %>
<% end %>





<h1> <%= title %></h1>

<form action="<%= action %>" method="post">
  <%if edit  %>
  <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Cat Name: </label>
    <input id="name" type="text" name="cat[name]" value="<%= @cat.name %>"> <br>
    <p>
    </p>
    <% if edit %>
      <% if @cat.sex == "M" %>
        <input type="radio" name="cat[sex]" value="M" checked> Male
        <input type="radio" name="cat[sex]" value="F"> Female <br>
      <%else%>
        <input type="radio" name="cat[sex]" value="M"> Male
        <input type="radio" name="cat[sex]" value="F" checked> Female <br>
      <% end %>
    <% else %>
        <input type="radio" name="cat[sex]" value="M"> Male
        <input type="radio" name="cat[sex]" value="F"> Female <br>
    <% end %>
    <p>
    </p>
    <legend> Cat Color </legend>
    <select name="cat[color]">
      <option>-select a color-</option>
      <% @colors.each do |color| %>
      <% if color == @cat.color %>
      <option selected value="<%=@cat.color%>"
      "<%end%>">
      <option value="<%=color%>"><%=color%></option>
      <% end %>
    </select><br>
    <p>
    </p>
  <legend>Your Cat's Birthday</legend>
        <label for="date">Date</label>
        <input type="date" id="date" name="cat[birth_date]"
        "<% if @cat.birth_date %>"
               value="<%= @cat.birth_date %>"
        "<% else %>"
                value=" <% @date %>"
        "<% end %>"
               min="1980-01-01" max="<%= @date %>" /> <br>
               <p>
               </p>
  <legend for="body">Description</legend>
  <textarea id="body" name="cat[text]" rows="4" cols="40" ><%=@cat.text%></textarea><br>

    <input type="submit" name="" value="<%= button_text %>">
</form>
